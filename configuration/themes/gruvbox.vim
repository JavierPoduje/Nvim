" Background and palette configuration
let g:gruvbox_material_palette = 'material' " OPTIONS: 'material', 'mix' or 'original'
let g:gruvbox_material_background = 'soft' " OPTIONS: 'hard', 'medium'(default), 'soft'

let g:gruvbox_material_transparent_background = 1

" Airline configuration
let g:airline_theme='base16_gruvbox_dark_hard'

" Finally set the color scheme
colorscheme gruvbox-material
